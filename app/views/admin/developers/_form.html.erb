<%= form_for [:admin, @developer],html: {id:"", role: "form"} do |f| %>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Developer Details</h3>
	</div> 
	
	<div class="panel-body">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="form-group">
					<%= f.label :name, class: "control-label"%>
					<%= f.text_field :name, class: "form-control", tabindex: "1", required: "required" %>
				</div>
				<div class="form-group">
					<%=f.label :description, class: "control-label"%><br/>
					<%= f.text_area :description, class: "form-control", tabindex: "3", required: "required" %>
				</div>
			</div>
			<div class="col-md-6 col-sm-12">
				<div class="form-group">
					<%=f.label :phone, class: "control-label"%><br/>
					<%= f.text_field :phone, class: "form-control phone_number", tabindex: "3", required: "required" %>
				</div>
				<div class="form-group">
					<%= f.label :email, class: "control-label"%>
					<%= f.email_field :email, class: "form-control email", tabindex: "6", required: "required" %>
				</div>

				<div class="form-group">
					<%= f.label :package, class: "control-label"%>
					<%= f.select :package, packages, {:include_blank => "Please select a package"},{ class: "form-control required", tabindex: "7", required: "required"}%>					
				</div>
				<!--  -->
				<div class="form-group">
				    
					<%= f.fields_for :address do |address_form| %>
						<%= render :partial => "addresses/form", locals: {f: address_form, address: @developer.address } %>
					<% end %>
				</div>
				<!--  -->
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.submit "Save",:class => "btn btn-primary", tabindex: "9"%>
	</div>
</div>

<% end %>
